# ตัวอย่างไฟล์ .env สำหรับระบบ tkc-telegram-bot

# Token ของ Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# รายชื่อ Telegram ID ของผู้ดูแลระบบ (คั่นด้วย , ได้หลายคน)
AUTHORIZED_ADMINS=123456789,@TKC_MINK

# กำหนดจำนวนคำถามสูงสุดต่อวันต่อพนักงาน
DAILY_QUESTION_LIMIT=30

# URL สำหรับเชื่อมต่อ Webhook (ถ้าใช้ webhook)
WEBHOOK_URL=https://yourdomain.com/webhook

# เปิด/ปิดการใช้ Webhook (True หรือ False)
USE_WEBHOOK=False

# Google Drive: OAuth Token path หรือ Service Account Key path (สำหรับสำรองข้อมูล)
GOOGLE_CREDENTIALS_PATH=path/to/credentials.json

# ID ของโฟลเดอร์ Google Drive ที่ใช้เก็บ backup
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# ตั้งเวลา backup อัตโนมัติ (เช่น 23:00)
BACKUP_TIME=23:00

# เวลา Timezone ที่ใช้ในระบบ
TIMEZONE=Asia/Bangkok
